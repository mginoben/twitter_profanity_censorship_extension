{
  "name": "Twitter Profanity",
  "description": "Censors tweets that contains abusive profanity based on context.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "host_permissions": [
    "https://twitter.com/*"
  ],
  "permissions": ["storage", "tabs", "scripting", "webNavigation", "activeTab"],
  "background": {
    "service_worker": "background.js",
    "persisent": true
  },
  "web_accessible_resources": [
    {
      "resources": [ "images/report.png"],
      "matches": [ "*://twitter.com/*" ]
    }
  ],
  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png" 
  }
}
