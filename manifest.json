{
  "name": "Twitter Profanity",
  "description": "A simple Chrome extension to get the highlighted text on any website.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "tabs",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "content.html"
  }
  
}