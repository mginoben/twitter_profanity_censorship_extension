{
  "name": "Twitter Profanity",
  "description": "A simple Chrome extension to get the highlighted text on any website.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "host_permissions": [
    "https://twitter.com/*"
  ],
  "permissions": ["storage", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "css": [ "style.css" ],
      "matches": ["https://twitter.com/*"],
      "js": ["popup.js"]
    }
  ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}
