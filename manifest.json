{
  "name": "Twitter Profanity",
  "description": "A simple Chrome extension to get the highlighted text on any website.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://twitter.com/*"
  ],
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["popup.js"]
    }
  ]
}